{
  "name": "api",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "deploy": "bunx sst deploy --stage production",
    "deploy:dev": "bunx sst deploy --stage dev",
    "remove": "bunx sst remove --stage production"
  },
  "dependencies": {
    "@google/generative-ai": "*",
    "cors": "*",
    "dotenv": "*",
    "express": "*",
    "serverless-http": "*"
  },
  "devDependencies": {
    "@types/aws-lambda": "*",
    "@types/cors": "*",
    "@types/express": "*",
    "@types/node": "*",
    "bun-types": "*",
    "sst": "*"
  }
}
