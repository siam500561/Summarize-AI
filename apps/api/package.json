{
  "name": "api",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/lambda.ts --outdir dist --target node --minify",
    "zip": "bun run build && powershell Compress-Archive -Path dist/* -DestinationPath lambda.zip -Force",
    "zip:clean": "powershell Remove-Item -Path lambda.zip -ErrorAction SilentlyContinue; bun run zip"
  },
  "dependencies": {
    "@arcjet/node": "^1.0.0",
    "@google/generative-ai": "*",
    "cors": "*",
    "dotenv": "*",
    "express": "*",
    "serverless-http": "*"
  },
  "devDependencies": {
    "@types/aws-lambda": "*",
    "@types/cors": "*",
    "@types/express": "*",
    "@types/node": "*",
    "bun-types": "*"
  }
}
